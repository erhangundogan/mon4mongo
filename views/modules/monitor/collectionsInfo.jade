- var classes = ["message"];
- if (settings.theme.columnMode)
  - classes.push("span6");

#collectionsInfo(class=classes)
  a.close(href="#", onclick="$('#collectionsInfo').remove()") ×
  a.close(href="#", onclick="$('#collectionsInfo').remove(); bindAddress('/collectionsInfo');") ↻
  h4 Collections information
  - var tableClasses = ["bordered-table", "zebra-striped", "condensed-table", "info-table"];
  table(class=tableClasses)
    each value,key in result
      - if (typeof value !== "function")
        tr
          td.right.labelColumn=key
          td
            .fit-to-cell
              =value