- var classes = ["message"];
- if (settings.theme.columnMode)
  - classes.push("span6");

#pingServer(class=classes)
  a.close(href="#", onclick="$('#pingServer').remove()") ×
  a.close(href="#", onclick="$('#pingServer').remove(); bindAddress('/pingServer');") ↻
  h4 Ping result
  - if (result.is_error())
    p Error
    =result.error_message()
  - else
    p OK
